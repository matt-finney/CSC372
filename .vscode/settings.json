{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ],
    // Java project settings for this workspace
    "java.project.referencedLibraries": {
        "include": [
            "lib/javafx-25/lib/*.jar"
        ]
    },
    "java.project.sourcePaths": [
        "src"
    ],
    // Ensure JavaFX VM args are applied
    "java.debug.settings.vmArgs": "--module-path \"${workspaceFolder}\\lib\\javafx-25\\lib\" --add-modules javafx.controls,javafx.fxml --enable-native-access=javafx.graphics"
}